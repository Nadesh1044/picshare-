<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PicShare</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1 class="title">Gallery</h1>
        <a href="/upload" class="btn">Photo Upload</a>
        <div class="gallery">
            <% photos.forEach(photo => { %>
                <div class="card">
                    <img src="<%= photo.imagePath %>" class="card-img" alt="<%= photo.title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= photo.title %></h5>
                        <p class="card-text"><%= photo.description %></p>
                        <form action="/delete/<%= photo._id %>" method="POST" class="delete-form">
                            <button type="submit" class="btn-delete">Remove Photo</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>